<script>
  const videoModal = document.getElementById('videoModal');
  const modalVideo = document.getElementById('modalVideo');

  videoModal.addEventListener('show.bs.modal', event => {
    const trigger = event.relatedTarget;
    const videoUrl = trigger.getAttribute('data-video');
    modalVideo.querySelector('source').src = videoUrl;
    modalVideo.load();
    modalVideo.play();
  });

  videoModal.addEventListener('hidden.bs.modal', () => {
    modalVideo.pause();
    modalVideo.currentTime = 0;
  });
</script>

<script>
  const menuToggle = document.getElementById("menuToggle");
  const clapperTop = document.getElementById("clapperTop");

  // Init overlay
  const overlay = document.createElement("div");
  overlay.id = "mobileMenuOverlay";
  overlay.innerHTML = `
    <a href="/projects">Projects</a>
    <a href="#">Over ons</a>
    <a href="#">Contact</a>
  `;
  document.body.appendChild(overlay);

  // Zet klappertje open bij start
  gsap.set(clapperTop, {
    rotate: -25,
    transformOrigin: "left center"
  });

  let menuOpen = false;

  menuToggle.addEventListener("click", () => {
    menuOpen = !menuOpen;

    if (menuOpen) {
      // Klappertje sluit
      gsap.to(clapperTop, {
        rotate: 0,
        duration: 0.3,
        ease: "power2.out"
      });

      // Overlay verschijnt
      gsap.to("#mobileMenuOverlay", {
        height: "100%",
        duration: 0.5,
        ease: "power2.out",
        delay: 0.1
      });
    } else {
      // Klappertje opent
      gsap.to(clapperTop, {
        rotate: -25,
        duration: 0.3,
        ease: "power2.in"
      });

      // Overlay verdwijnt
      gsap.to("#mobileMenuOverlay", {
        height: "0%",
        duration: 0.5,
        ease: "power2.in"
      });
    }
  });

  // Menu sluiten als scherm > 992px
  window.addEventListener("resize", () => {
    if (window.innerWidth >= 992) {
      menuOpen = false;
      gsap.set(clapperTop, { rotate: -25 });
      gsap.set("#mobileMenuOverlay", { height: "0%" });
    }
  });
</script>




